{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
<br>
    <h1>User</h1>
    <br>
   <div class="container">
    <table id="showtable" class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.Name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ user.Age }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ user.CIN }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ user.Adress }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.Tel }}</td>
            </tr>
        </tbody>
    </table>
    </div>
<br>

<div class="d-flex">
 <a class="btn btn-primary me-2" href="{{ path('app_user_index') }}">back to list</a>
<a class="btn btn-warning me-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
</div>
  
</div>
   
{% endblock %}
