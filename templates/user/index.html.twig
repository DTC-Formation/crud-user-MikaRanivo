{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1>Liste des Utilisateurs</h1>
    <br>
    <table  class="table table-bordered">
        <thead >
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>CIN</th>
                <th>Adress</th>
                <th>Tel</th>
                <th>Height</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.Name }}</td>
                <td>{{ user.Age }}</td>
                <td>{{ user.CIN }}</td>
                <td>{{ user.Adress }}</td>
                <td>{{ user.Tel }}</td>
                <td>{{ user.height }} m</td>
                <td class="center">
                    <div class="d-flex ">
                        <a class="btn btn-primary me-2" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                        <a class="btn btn-warning me-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
     
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    
    <a class="btn btn-primary" href="{{ path('app_user_new') }}">Create new</a>
    </div>
{% endblock %}
